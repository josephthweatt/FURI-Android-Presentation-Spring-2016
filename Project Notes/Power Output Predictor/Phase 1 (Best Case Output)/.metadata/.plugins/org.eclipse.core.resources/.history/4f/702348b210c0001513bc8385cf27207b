
public class BestCaseOutput {
	static short day;
	static float[] sunriseSchedule, sunsetSchedule;
	
	//variables used for sunrise/sunset
	static float hour;
	static double locationLatitude;
	static double declination;
	
	public static void main(String[] args) {
		day = 1;
		sunriseSchedule = sunsetSchedule = new float[365];
		setLocationLatitude(22);
		//this here gets the schedules for sunrises and sunsets
		for (int i = 0; i < 365; i++, day++) {
			hour = (float) Math.acos(
					(-Math.tan(locationLatitude) * Math.tan(getDeclinationAngle())));
			if (hour < 0) { 
				sunriseSchedule[i] = hour;
				sunsetSchedule[i] = -hour;
			} else {
				sunsetSchedule[i] = hour;
				sunriseSchedule[i] = -hour;
			}
			System.out.println(sunriseSchedule[i] + " : " + sunsetSchedule[i]);
		}
		
	}
	
	//sets location latitude 
	public static void setLocationLatitude(double lat) {
		locationLatitude = lat;
	}
	
	//returns declination angle for a given day
	public static double getDeclinationAngle() {
		double sumnum = (double)(360/365) * (day - 81);
		declination = Math.asin(Math.sin(23.45) * Math.sin(sumnum));
		return declination;
	}

}
